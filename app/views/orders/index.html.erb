<h1>Listing orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Price</th>
      <th>Shipping address</th>
      <th>Shipped</th>
      <th>Tracking number</th>
      <th>Via</th>      
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.price %></td>
        <td><%= order.shipping_address.address %></td>
        <td><%= order.shipped %></td>
        <td><%= order.tracking_number %></td>
        <td><%= order.via %></td>
        <td><%= link_to 'Show', order, :class => 'btn btn-default' %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

