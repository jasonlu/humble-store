
<%= form_for(@shipping_address, url:{action: 'create'}, method: 'post' ) do |f| %>
<!--
  <div class="form-group">
    <%= label :saved_address, "Saved addresses" %>
    <%= select_tag :saved_address, @saved_addresses.collect {|p| [ p.address, p.id ]}, :class => 'form-control' %>
  </div>
-->
<div id="shipping_address">
  <div class="form-group">
    <%= f.label :ship_to %>
    <%= f.text_field :ship_to, :class => 'form-control', :placeholder => 'John Smith' %>
  </div>
  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, :class => 'form-control', :placeholder => '000-000-0000' %>
  </div>
  <div class="form-group">
    <label for="shipping_address_address">Street address</label>
    <input type="text" class="form-control" name="shipping_address[address_1]" id="shipping_address_address" value="<%= @address_1 %>"><br>
    <input type="text" class="form-control" name="shipping_address[address_2]" value="<%= @address_2 %>">
    
  </div>
 <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, :class => 'form-control', :placeholder => 'City' %>
  </div>
  <div class="form-group">
    <label for="shipping_address_state">State</label>
    <%= f.select :state, options_for_select(us_states), {:prompt => '-- Please select --'}, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :zip, "Zip code" %>
    <%= f.text_field :zip, :class => 'form-control', :placeholder => '00000' %>
  </div>
  
  <div class="checkbox">
    <label>
      <%= f.check_box :primary %> Default shipping address
    </label>
  </div>
  <div class="form-group">
    <%= f.label :note %>
    <%= f.text_area :note, :class => 'form-control', :placeholder => '...' %>
  </div>
</div>
<div id="credit_card_info">
  <div class="form-group">
    <%= label :credit_card, :card_holder, "Name on card" %>
    <%= text_field :credit_card, :card_holder, :class => 'form-control', :placeholder => 'John Smith' %>
  </div>
  <div class="form-group">
    <%= label :credit_card, :card_number, "Card #" %>
    <%= text_field :credit_card, :card_number, :class => 'form-control', :placeholder => '0000-0000-0000-0000' %>
    <p class="help-block">Input digits only, without "-" or spaces.</p>
  </div>

  <div class="form-group">
    <%= label :credit_card, :expire_date, "Expire date" %>
    <div class="date-year-month">
    <%= select_year(Date.today, {start_year: Date.today.year, end_year: Date.today.year+ 10, prompt: 'Choose year',  use_two_digit_numbers: true}, {class: "form-control"}) %>
    <%= select_month(Date.today, {prompt: 'Choose month',  use_two_digit_numbers: true}, {class: "form-control"}) %>
    </div>
    
  </div>

  <div class="form-group">
    <%= label :credit_card, :security_code, "Security code" %>
    <%= text_field :credit_card, :security_code, :class => 'form-control', :placeholder => '000' %>
  </div>
  
</div>

  <button type="submit" class="btn btn-default pull-right">Submit</button>
<% end %>
