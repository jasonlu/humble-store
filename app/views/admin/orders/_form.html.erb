<%= form_for(@order, html: {class: 'form-horizontal'}) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <table class="table table-strapped">
      <tr>
        
      </tr>
      <% @order.cart.items.each do |c_item| %>
        <tr>
          <td><%= c_item.title %></td>
          <td><%= c_item.price %></td>
        </tr>
      <% end %>
    </table>
    <label class="control-label col-lg-1">Shipping info</label>
    <div class="col-lg-11">
      <%= @order.shipping_address.ship_to %> <br>
      <%= @order.shipping_address.address %> <br>
      <%= @order.shipping_address.city %>, <%= @order.shipping_address.state %> <%= @order.shipping_address.zip %>
    </div>
    
  </div>

  <div class="form-group">
    <%= f.label :price, {class: 'control-label col-lg-1'} %>
    <div class="col-lg-11">
    <%= f.text_field :price, class: 'form-control' %>
    </div>
  </div>
  
  
    <%= f.submit %> <%= link_to "Back", orders_path %>
  
<% end %>