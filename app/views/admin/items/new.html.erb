<h1>New item</h1>



<% Category.all.each do |cat| %>
<%= link_to new_item_form_path(cat.id) do %>
<div class="category-item">
  <h2 class="title"><%= cat.title %></h2>
  <span class="item-count"><%= cat.item %></span>
  
</div>
<% end %>
<% end %>

<%= button_link_to 'New Category', new_category_path %>
<%= link_to 'Back', items_path %>
